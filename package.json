{
	"name": "svelte-template",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "deno run -A npm:vite dev --host --open",
		"build": "deno run -A npm:vite build",
		"preview": "deno run -A npm:vite preview --host --open",
		"prepare": "deno run -A npm:@sveltejs/kit sync || echo ''",
		"check": "deno run -A npm:@sveltejs/kit sync && deno run -A npm:svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "deno run -A npm:@sveltejs/kit sync && deno run -A npm:svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"devDependencies": {
		"@deno/svelte-adapter": "^0.1.0",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@sveltejs/vite-plugin-svelte-inspector": "^4.0.1",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^6.2.6",
		"vite-plugin-devtools-json": "^0.2.0"
	}
}